<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xhight"
    android:layout_margin="@dimen/medium"
    android:background="@drawable/back_item_requests">
<RelativeLayout

    android:id="@+id/Tv"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/blood_type_Tv"
        android:layout_width="@dimen/size_check_box"
        android:layout_height="@dimen/size_check_box"
        android:layout_marginStart="@dimen/margin_top1"
        android:background="@drawable/back_blood_type_tv"
        android:gravity="center"
        android:text="B+"
        android:textSize="@dimen/xxxsp" />


</RelativeLayout>

<RelativeLayout
    android:layout_toRightOf="@+id/Tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="@dimen/xx_large"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/xlarge"
                android:gravity="center"
                android:text="اسم الحاله" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xx_large"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/xlarge"
                android:gravity="center"
                android:text="مستشفي" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xx_large"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/xlarge"
                android:gravity="center"
                android:text="المدينة" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xx_large"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/xlarge"
                android:gravity="center"
                 />

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xx_large"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/xlarge"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xx_large"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/xlarge"
                android:gravity="center"
                 />

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/Description_btn"
                android:background="@color/home_back"
                android:layout_marginEnd="@dimen/medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xxhight"
                android:layout_marginTop="@dimen/xlarge"
                android:text="@string/dec" />

            <Button
                android:id="@+id/Call_btn"
                android:layout_marginTop="@dimen/xx_large"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xxhight"
                android:layout_marginEnd="@dimen/medium"
                android:background="@color/color_btn_back_1"
                android:text="@string/call"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>



</RelativeLayout>

