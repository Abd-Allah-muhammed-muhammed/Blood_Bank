<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.LocationActivity">



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
         />

    <Button
        android:id="@+id/Location_btn_ChoseLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_top1"
        android:background="@color/sgin_up"
        android:text="@string/chose_the_location"
        android:textColor="@color/white"
        android:textSize="@dimen/text_btn" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="@dimen/large"
        android:layout_marginBottom="@dimen/small"
        android:layout_above="@+id/Location_btn_ChoseLocation"
        android:src="@drawable/ic_location_searching_black_24dp" />

</RelativeLayout>



